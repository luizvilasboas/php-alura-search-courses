{
    "name": "olooeez/alura-search-courses",
    "description": "Sample package to understand PHP's composer",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Luiz Felipe de Castro Vilas Boas",
            "email": "luizfelipecastrovb@gmail.com"
        }
    ],
    "require": {
        "guzzlehttp/guzzle": "^7.8",
        "symfony/dom-crawler": "^6.0",
        "symfony/css-selector": "^7.0"
    },
    "autoload": {
        "psr-4": {
            "Olooeez\\CoursesSearcher\\": "src/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^10.5",
        "squizlabs/php_codesniffer": "^3.8",
        "phan/phan": "^5.4"
    },
    "scripts": {
        "test": "phpunit tests",
        "cs": "phpcs --standard=PSR12 src tests alura-search-courses.php",
        "phan": "phan --allow-polyfill-parser",
        "check": [
            "@phan",
            "@cs",
            "@test"
        ]
    }
}
